<div class="container">
  <h1>Add a movie to <strong><%= @list.name %></strong> list</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit 'Add movie', class: 'btn btn-primary' %> <%= link_to 'Cancel', list_path(@list), class: 'btn btn-danger' %>
  <% end %>


</div>
