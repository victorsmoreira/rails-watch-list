<div class="list-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
</div>

<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @list.name %></h1>
    <div>
      <%= link_to 'Edit list', edit_list_path(@list), class: 'text-secondary mr-2' %>
      <%= link_to 'Add a movie to this list', new_list_bookmark_path(@list), class: 'text-success' %>
    </div>
  </div>

  <% @list.movies.each do |movie| %>

    <div class="movie-card">
      <%= image_tag movie.poster_url %>
      <div class="movie-card-info">
        <div class="d-flex justify-content-start align-items-center m-0">
          <h2><%= movie.title %></h2>
          <h3> â€¢ <%= movie.rating %> <i class="fas fa-star text-warning"></i></h3>
        </div>
        <p><%= movie.overview %></p>
      </div>
      <% bookmark = @list.bookmarks.find{|bookm| bookm.movie = movie} %>
      <p class='movie-card-delete'><%= link_to '<i class="fas fa-times">'.html_safe, bookmark_path(bookmark), class: 'text-secondary' ,method: :delete, data: {confirm: 'Remove bookmark from list?'} %></i></p>
    </div>
  <% end %>
</div>
