<div class="container">

  <h1>My lists</h1>

  <div class="cards-grid">

    <% @lists.each do |list| %>

      <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= list.name %>
        </div>
      <% end %>

    <% end %>
  </div>


  <h2>sandbox</h2>

  <% movie = @lists.first.movies.last %>
  <div class="movie-card">
    <%= image_tag movie.poster_url %>
    <div class="movie-card-info">
      <h2><%= movie.title %></h2>
      <p><%= movie.overview %></p>
    </div>
  </div>

</div>
