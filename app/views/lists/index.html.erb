<div class="container">

  <h1>My lists</h1>

  <div class="cards-grid">

    <% @lists.each do |list| %>

      <% list_image_url = cl_image_path list.photo.key || 'https://source.unsplash.com/400x300/?popcorn' %>
      <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list_image_url %>')">
          <%= list.name %>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
